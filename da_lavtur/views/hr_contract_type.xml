<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- TREE VIEW -->
    <record id="hr_contract_type_tree" model="ir.ui.view">
        <field name="name">hr.contract.type.tree</field>
        <field name="model">hr.contract.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="label"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <!-- FORM -->
    <record id="hr_contract_type_form" model="ir.ui.view">
        <field name="name">hr.contract.type.form</field>
        <field name="model">hr.contract.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="label"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="hr_contract_type_act_window">
        <field name="name">Tipologie di Contratto</field>
        <field name="res_model">hr.contract.type</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <menuitem
        action="hr_contract_type_act_window"
        id="menu_contract_type"
        name="Tipologie di Contratto"
        parent="hr_recruitment.menu_hr_recruitment_configuration"
        sequence="13"
    />

</odoo>

